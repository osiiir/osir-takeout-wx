.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}
.chat-list {
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
  overflow-y: scroll;
}
.message-item {
  display: flex;
  margin-bottom: 30rpx;
  align-items: flex-start;
}
.user-message {
  flex-direction: row-reverse;
}
.ai-message {
  flex-direction: row;
}
.avatar image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #fff;
}
.content {
  max-width: 60%;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  margin: 0 20rpx;
  word-wrap: break-word;
}
.user-message .content {
  background-color: #74b3f1ff; /* Light Blue */
  color: #333;
}
.send-btn {
  margin-left: 20rpx;
  width: 120rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #74b3f1ff; /* Light Blue */
  color: #333;
  font-size: 28rpx;
  border-radius: 35rpx;
  text-align: center;
  padding: 0;
  font-weight: bold;
}
.ai-message .content {
  background-color: #fff;
  color: #333;
}
.input-area {
  padding: 20rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  border-top: 1rpx solid #ddd;
  padding-bottom: constant(safe-area-inset-bottom); /* iOS 11.0 */
  padding-bottom: env(safe-area-inset-bottom); /* iOS 11.2 */
}
.input-box {
  flex: 1;
  height: 70rpx;
  background-color: #f0f0f0;
  border-radius: 35rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}